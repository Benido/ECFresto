{% extends 'base.html.twig' %}

{% block title %}La carte{% endblock %}

{% block body %}
    <div class="container">
        <div class="my-5">
            <h1 class="text-center text-bronze">La Carte</h1>
            {% for category in categories %}
                <div class="p-3">
                <h2 class="mb-3">{{ category.getTitle }}</h2>
                {% for dish in dishes %}
                    {% if dish.getCategory.getTitle == category.getTitle %}
                        <div class="row px-2 m-1 ms-2 bg-beige">
                            <div class="col">
                            <h3 class="h5 mt-3">{{ dish.getTitle }}</h3>
                                <em>{{ dish.getDescription }}</em>
                                <p class="text-secondary"><small>
                                    {% for allergen in dish.getAllergens %}
                                        {{ allergen.getTitle }}
                                    {% endfor %}
                                </small></p>
                            </div>
                            <div class="col-auto text-beige-clair fs-4 text-end py-3 pe-3">
                                <strong class="">{{ dish.getPrice }}â‚¬</strong>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                </div>
                <p class="text-center">* * * * *</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
