<form
    name="{{ imageForm.vars.full_name }}"
    action="{{ imageForm.vars.action }}"
    method="{{ imageForm.vars.method }}"
    enctype="multipart/form-data"
    class="m-3">
    <div>
        <div class="d-flex justify-content-between">
            <h4>{{ imageForm.vars.data.id is defined ? 'Ã‰diter l\'' : 'Ajouter une ' }} image</h4>
            <button type="button"
                    class="btn-close"
                    data-controller="image-edition"
                    data-action="click->image-edition#closeForm"
                    aria-label="Close"
                    {% if imageForm.vars.data.id is defined %}
                    data-image-edition-id-value="{{ imageForm.vars.data.id }}"
                    {% endif %}
                    ></button>
        </div>
    </div>
    <div>
        {{ form_row(imageForm.imageFile, {
            'attr': {'class': 'form-control'},
            'label': 'Ajouter un fichier'
        }) }}
        {{ form_row(imageForm.title, {
            'attr': {'class': 'form-control'},
            'label': 'Titre'
        }) }}
    </div>
    <div>
        <div class="text-center">
            {{ form_widget(imageForm.submit, {
                'attr': {'class': 'btn bg-bronze text-light my-3'},
                'label': 'Enregistrer'}) }}
            {% if imageForm.vars.data.id is defined %}
                <button type="button"
                        id="delete"
                        class="btn btn-danger"
                        data-controller="image-edition"
                        data-image-edition-id-value="{{ imageForm.vars.data.id }}"
                        data-action="click->image-edition#removeImage"
                >Supprimer</button>
            {% endif %}
        </div>
        {{ form_row(imageForm._token)}}
    </div>
</form>